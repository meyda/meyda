{
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "importHelpers": true
}
